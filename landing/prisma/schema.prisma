// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql" // or "sqlite" if you’re using SQLite
  url      = env("DATABASE_URL") // make sure this is set in your .env
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String          @id @default(uuid())
  clerkUserId      String          @unique
  subscriptionId   String?         @unique
  stripeCustomerId String?         @unique
  plan             String          @default("free") // "free", "trial", or "pro"
  trialEndsAt      DateTime?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  syntheticData    SyntheticData[]
}

model Template {
  id            String          @id @default(uuid())
  name          String
  content       String
  syntheticData SyntheticData[] // ← Add this so Prisma knows the relation
}

model SyntheticData {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  template   Template @relation(fields: [templateId], references: [id])
  templateId String
  data       String
  createdAt  DateTime @default(now())
}