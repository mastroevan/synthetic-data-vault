// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql" // or "sqlite" if youâ€™re using SQLite
  url      = env("DATABASE_URL") // make sure this is set in your .env
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String          @id @default(uuid())
  clerkUserId      String          @unique

  subscriptionId   String?         @unique
  stripeCustomerId String?         @unique

  // New fields for subscription management
  plan             Plan            @default(FREE)
  trialEndsAt      DateTime?

  // Additional fields for team and usage tracking
  teamId           String?
  team             Team?           @relation(fields: [teamId], references: [id])

  // Usage and limits
  monthlyRowsGenerated Int @default(0)

  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  syntheticData    SyntheticData[]
}

// New enum for plan types
enum Plan {
  FREE
  STARTER
  PRO
  TEAM
  ENTERPRISE
}

model Team {
  id           String @id @default(uuid())
  name         String
  ownerId      String
  members      User[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Template {
  id            String          @id @default(uuid())
  name          String
  content       String
  syntheticData SyntheticData[]
}

model SyntheticData {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  template   Template @relation(fields: [templateId], references: [id])
  templateId String
  data       String
  createdAt  DateTime @default(now())
}